<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="istenen gruplari calistirma">
    <test name="istenen grup testi">
        <!-- hangi grupların çalışacağını/çalışmayacağını-->
        <groups>
            <run>
                <include name="smoke"></include>
                <!--<exclude name="haftalik"></exclude> <!-haftalik olanları çalıştırma-->
            </run>
        </groups>
        <!-- çalışacak/çalışmayacak grupların nerede aranacağı -->
        <packages>
            <package name="tests.*"></package>
        </packages>
    </test>
</suite>